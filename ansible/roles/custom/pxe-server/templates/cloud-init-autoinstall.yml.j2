#cloud-config
autoinstall:
  version: 1
  keyboard:
    layout: dk
  ssh:
    allow-pw: false
    install-server: true
  storage:
    config: {{ hostvars[x86_host].autoinstall.storage.config }}

  user-data:
    # Set TimeZone and Locale
    timezone: Europe/Copenhagen
    locale: dk_DK.UTF-8

    # Hostname
    hostname: {{ x86_host }}

    # cloud-init not managing hosts file. only hostname is added
    manage_etc_hosts: localhost

    users:
      - name: sysadmin
        primary_group: users
        groups: [adm, admin]
        shell: /bin/bash
        sudo: ALL=(ALL) NOPASSWD:ALL
        lock_passwd: true
        ssh_authorized_keys:
          - ssh-rsa  parallels@devmaster
          - ssh-rsa  soren@Srens-iMac
          - ssh-rsa  soren@Sorens-MacBook-Pro.local
